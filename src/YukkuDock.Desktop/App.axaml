<Application
    x:Class="YukkuDock.Desktop.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="using:YukkuDock.Desktop.Converters"
    xmlns:local="using:YukkuDock.Desktop"
    xmlns:sty="using:FluentAvalonia.Styling"
    RequestedThemeVariant="Default"
    >
    <!--  "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options.  -->
    <Application.Resources>
        <conv:FalseIfNullConverter x:Key="FalseIfNull" />
        <conv:EmptyIfNullConverter x:Key="EmptyIfNull" />
        <conv:EmptyVersionIfNullConverter x:Key="EmptyVersionIfNull" />
        <conv:ControlToTypeConverter x:Key="ControlToTypeConverter" />
        <Color x:Key="SystemListLowColor">#FFDDDDDD</Color>
    </Application.Resources>
    <Application.Styles>
        <sty:FluentAvaloniaTheme />
        <StyleInclude
            Source="avares://Avalonia.Controls.TreeDataGrid/Themes/Fluent.axaml"/>
    </Application.Styles>
</Application>
